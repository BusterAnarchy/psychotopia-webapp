<div class="chart-wrapper">
    <div class="chart-wrapper__canvas">
        <canvas id="{{ id }}" class="chart-canvas"></canvas>
    </div>
    {% include "components/charts/chart_data_table.html.twig" with {
        chart_id: id,
        chart_data_json: chart_data,
        table_config: {
            type: 'timeseries',
            labelsKey: 'labels_line',
            datasetsKey: 'datasets_line',
            labelHeading: 'Période',
            datasetHeading: 'Série',
            valueHeading: 'Pourcentage de pureté'
        }
    } %}
</div>
 
<script>
    (function() {

        const data = {{ chart_data | raw }};

        data.datasets_line.forEach(element => {
            
            if (element.label === "borne sup") {
                element.borderColor = "transparent";
            } else if (element.label === "borne inf") {
                element.borderColor = "transparent";
                element.backgroundColor = pattern.draw('diagonal', 'rgba(128, 128, 128, 0.3)');
                element.fill = "1";
            } else {
                element.borderColor = "blue";
                element.backgroundColor = "transparent";
                element.fill = false;
            }
        });

        window["{{ id }}_chart"] = new Chart(document.getElementById('{{ id }}').getContext('2d'), {
            type: 'line',
            data: {
                labels: data.labels_line,
                datasets: data.datasets_line,
                lineColor: Chart.defaults.colorPalette
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        stacked: true,
                        title: {
                            display: true,
                            text: 'Période'
                        }
                    },
                    y: {
                        stacked: '{{ is_stacked }}' === 'true',
                        beginAtZero: false,
                        title: {
                            display: true,
                            text: 'Pourcentage de pureté'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                },
                pointStyle: false,
            }
        });

    })();
</script>
