<div class="chart-wrapper">
    <div class="chart-wrapper__canvas">
        <canvas id="{{ id }}" class="chart-canvas"></canvas>
    </div>
    {% include "components/charts/chart_data_table.html.twig" with {
        chart_id: id,
        chart_data_json: chart_data,
        table_config: {
            type: 'scatter',
            labelsKey: 'datasets',
            datasetHeading: 'Série',
            xHeading: 'Masse du comprimé (mg)',
            yHeading: 'Quantité de substance (mg)'
        }
    } %}
</div>
 
<script>
    (function() {

        const data = {{ chart_data | raw }};

        const filterLegendEntries = (legendItem, chartInstance) => {
            return legendItem.text.length != 0;
        };

        new Chart(document.getElementById('{{ id }}').getContext('2d'), {
            type: 'scatter',
            data: data,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: {
                            filter: filterLegendEntries
                        }
                    }
                },
                scales: {
                    x: {
                        min: data.min_x-5,
                        max: data.max_x+5,
                        title: {
                            display: true,
                            text: 'Masse du comprimé (mg)'
                        },
                        ticks: {
                        callback: value => Math.round(value)
                        }
                    },
                    x2: {
                        min: data.min_x-5,
                        max: data.max_x+5,
                        display: false
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Quantité de substance (mg)'
                        }
                    }
                }
            },
            }
        );

    })();
</script>
